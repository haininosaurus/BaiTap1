<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="BaiTap1.MainPage">

    <StackLayout>
        <Button x:Name="chao"
                Text="MÀN HÌNH CHÀO"
                Clicked="clickChao" />
        <Button x:Name="tong"
                Text="MÀN HÌNH TÍNH TỔNG"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="clickTinhTong"/>
        <Button x:Name="stack"
                Text="STACKLAYOUT"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="clickStackLayout"/>
        <Button x:Name="absolute"
                Text="ABSOLUTELAYOUT"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="clickAbsoluteLayout"/>
        <Button x:Name="grid"
                Text="GRIDLAYOUT"
                Clicked="clickGridLayout"/>
        <Button x:Name="login"
                Text="LOGIN"
                Clicked="clickLogin"/>
    </StackLayout>

</ContentPage>
